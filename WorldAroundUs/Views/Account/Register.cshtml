@model WorldAroundUs.ViewModels.Account.RegisterViewModel

@{
    Layout = null;
    ViewData["Title"] = "Регистрация";
}
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<div id="signIn" class="container p-xl-3">
    <div class="row justify-content-lg-center">
        <div class="col-lg-8 text-lg-center mb-2">
            <h1>Регистрация</h1>
        </div>
    </div>
    <div class="row justify-content-lg-center">
        <div class="col-lg-7 shadow pt-3 pb-1 mb-2 d-flex justify-content-center" style="background-color: #56AFA3; border-radius: 6%;">
            <div class="col-lg-9 mt-2">
                <p class="d-flex justify-content-center">Создайте аккаунта !</p>
                <p class="d-flex justify-content-center" style="margin-bottom: 0px;">
                    Это сохранит прогресс и позволит
                </p>
                <p class="d-flex justify-content-center">отслеживать успеваемость</p>
                <form class="form-group" method="post" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input class="form-control form-control shadow-sm bg-white rounded-pill" asp-for="Email" placeholder="Введите почту">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control shadow-sm bg-white rounded-pill" asp-for="UserName" placeholder="Введите имя пользователя">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control shadow-sm bg-white rounded-pill" asp-for="Password" placeholder="Введите пароль">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control shadow-sm bg-white rounded-pill" asp-for="PasswordConfirm" placeholder="Повторите пароль">
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block rounded shadow-sm rounded-pill" style="background-color: #FFC23A">Создать аккаунт</button>
                    </div>
                </form>
                <div class="col-lg-12 mt-2 mb-3 ">
                    <p class="d-inline">У вас уже есть аккаунт? </p>
                    <a class="btn btn-block rounded shadow-sm rounded-pill ml-2 d-inline" asp-action="Login" asp-controller="Account" style="background-color: #FFC23A">Войти</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<style>
    body{
        margin: 0px; 
        background-image: url(../../backreg.png);
    }
</style>