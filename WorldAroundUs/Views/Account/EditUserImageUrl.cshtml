@model WorldAroundUs.ViewModels.UserImage

@{
    Layout = null;
    ViewData["Title"] = "Изменение фото профиля";
}
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<div id="signIn" class="container p-xl-3">
    <div class="row justify-content-lg-center">
        <div class="col-lg-8 text-lg-center mb-2">
            <h1 class="hb">Изменение фотографии профиля</h1>
        </div>
    </div>
    <div class="row justify-content-lg-center">
        <div class="col-lg-7 shadow pt-3 pb-1 mb-2 d-flex justify-content-center" style="background-color: #56AFA3;">
            <div class="col-lg-9 mt-2">
                <form class="form-group" method="post" asp-controller="Account" asp-action="EditUserImageUrl">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input class="form-control shadow-sm bg-white rounded-pill" asp-for="UserImageUrl" placeholder="Введите ссылку на новую фотографию">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block rounded shadow-sm rounded-pill hr" style="background-color: #FFC23A; font-size: 20px">Изменить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<style>
    body{
        margin: 0px; 
        background-image: url(../../backreg.png);
    }
</style>