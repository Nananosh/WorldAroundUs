@model List<WorldAroundUs.ViewModels.QuestionAnswerOptionViewModel>

<div class="container">
    <div class="row mt-5 mb-3">
        <div class="col-lg-12 d-flex justify-content-center align-items-baseline mb-3">
            <p class="h1 hb" style="font-size: 55px">Тест по теме :</p>
            <p class="h3 hb ml-2" style="font-size: 55px">@Model[0].Question.Test.Subsection.Title</p>
        </div>
    </div>
</div>
<div class="container shadow pt-3 pb-1 mb-2" style="background-color: #56AFA3;">
    <div class="row">
        <div class="col-lg-12 h2 hm mb-3">
            @Html.DisplayFor(model => model[0].Question.Text)
        </div>
        <div class="col-lg-12">
            <form method="post">
                <input type="hidden" name="id" value="@Model[0].Question.Test.Id"/>
                @foreach (var answer in @Model)
                {
                    <div class="col-lg-12 d-flex align-items-center  mb-3">
                        <input type="radio" name="idAnswer" value="@answer.Id"/>
                        @if (!string.IsNullOrEmpty(@answer.AnswerOption.Text))
                        {
                            <p class="hr ml-3 pt-3" style="font-size: 20px">
                                @answer.AnswerOption.Text
                            </p>
                        }
                        else
                        {
                            <img src="@answer.AnswerOption.ImageUrl" class="responsive ml-3" alt=""/>
                        }
                    </div>
                }
                <div class="col-lg-12 d-flex justify-content-center mb-3">
                    <button type="submit" class="btn rounded shadow-sm rounded-pill hr" style="background-color: #FFC23A; font-size: 20px">Далее</button>
                </div>
            </form>
            </div>
    </div>
</div>