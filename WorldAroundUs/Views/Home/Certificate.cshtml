@model WorldAroundUs.ViewModels.Account.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Сертификат";
}
<head xmlns="http://www.w3.org/1999/html">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<br>
<br>
<br>
<br>

<div id="signIn" class="container">
    <div class="row justify-content-lg-center">
        <div class="col-lg-7 shadow pt-3 mb-2 d-flex justify-content-center flex-column" style="background-image: url(../../cert-back.png);background-size: cover;">
            <img src="../../logo.svg" width="250px" height="100px">
            <p class="hm text-white ml-2">Электронная энциклопедия</p>
            <br>
            <br>
            <div class="mb-2">
                <h1 class="hb text-white d-flex justify-content-center" style="font-size: 70px;">Сертификат</h1>
            </div>
            <br/>
            <div class="mt-2">
                <p class="d-flex justify-content-center hr text-white" style="margin-bottom: 0px; font-size: 25px; text-align: center;">
                    Вручается @ViewBag.UserName за прохождение всех тестов в разделе : @ViewBag.SectionName
                </p>
            </div>
            <br/>
            <br/>
            <br/>
            <br/>
            <div class="d-flex align-items-baseline mt-5">
                <div class="d-flex align-items-baseline">
                    <p class="hm" style="color:#2471ac;">Скребец
                    </p>
                    <p class="ml-2 hm" style="color:#2471ac;">
                        Татьяна</p>
                </div>
                <div>
                    <img src="../../podpis.png" class="ml-5" width="120px" height="120px" style="object-fit: contain"/>
                </div>
                <div>
                    <img src="../../pechat.png" class="ml-3" width="120px" height="120px" style="object-fit: contain"/>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<style>
    body{
        margin: 0px; 
    }
</style>