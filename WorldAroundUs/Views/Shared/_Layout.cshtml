<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WorldAroundUs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>

    <link href="~/lib/Kendo/styles/kendo.bootstrap-main.css" rel="stylesheet"/>
    <script src="~/lib/Kendo/js/jquery.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.all.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.timezones.min.js"></script>
    <script src="~/lib/Kendo/js/cultures/kendo.culture.ru-RU.min.js"></script>
    <script src="~/lib/Kendo/js/messages/kendo.messages.ru-RU.min.js"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow p-3" style="background-color: #63C0B5;">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/logo.png" width="100" height="30" class="d-inline-block align-top" alt="">
            </a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <br>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white hb" asp-area="" asp-controller="Home" asp-action="Index">Задачи</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white hb" asp-area="" asp-controller="Home" asp-action="Index">Рейтинг</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white hb" asp-area="" asp-controller="Home" asp-action="Index">Успехи</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white hb" asp-area="" asp-controller="Home" asp-action="Index">Справка</a>
                    </li>

                </ul>
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                               role="button" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                <img id="avatar" class="rounded-circle" src="" value="" alt="avatar" style="height: 50px; width: 50px; object-fit:cover;"/>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item hr" asp-route-id="@User.Claims.ElementAt(0).Value">@User.Claims.ElementAt(1).Value</a>
                                <div class="dropdown-divider"></div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="AdminPanel" asp-controller="Admin" class="dropdown-item hr">Админка</a>
                                }
                                <a class="dropdown-item hr" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white hb" asp-controller="Account" asp-action="Login">Войти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hb" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<main role="main">
    @RenderBody()
</main>

@if (User.Identity.IsAuthenticated)
{
    <script>
let avatar = document.getElementById('avatar');
$.get('@Url.Action("GetUserImage", "Account", new {id = User.Claims.ElementAt(0).Value})', function(data, status){
    avatar.src = data;
});
    </script>
}

<footer class="footer text-muted" style="background-color: #63C0B5;">
    <div class="container p-2">
        <div class="row d-flex align-items-center">
            <div class="col-lg-6 text-white hb">ООО Мара Принт</div>
            <div class="col-lg-6 d-flex justify-content-end">
                <a class="mr-1">
                    <img id="tg" class="rounded-circle" src="https://img.icons8.com/fluency/48/000000/telegram-app.png" alt="tg" style="height: 40px; width: 40px; object-fit: none;"/>
                </a>
                <a class="mr-1">
                    <img id="vk" class="rounded-circle" src="https://img.icons8.com/color/48/000000/vk-circled.png" alt="vk" style="height: 40px; width: 40px; object-fit: none;"/>
                </a>
                <a class="mr-1">
                    <img id="inst" class="rounded-circle" src="https://img.icons8.com/fluency/48/000000/instagram-new.png" alt="inst" style="height: 40px; width: 40px; object-fit: none;"/>
                </a>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kendo.cdn.telerik.com/2016.1.112/js/jszip.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>